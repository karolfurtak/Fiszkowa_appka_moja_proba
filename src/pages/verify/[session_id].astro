---
export const prerender = false;

import VerificationView from '../../components/verify/VerificationView';
import { Toaster } from '@/components/ui/sonner';
import Topbar from '../../components/layout/Topbar';

// Pobranie session_id z parametrów routingu
const sessionId = Astro.params.session_id;

// Walidacja session_id
if (!sessionId || sessionId.trim().length === 0) {
  return Astro.redirect('/generate?error=invalid_session');
}

// Sprawdzenie autoryzacji
const { data: { session } } = await Astro.locals.supabase.auth.getSession();

// Jeśli użytkownik nie jest zalogowany, przekieruj na stronę logowania
if (!session) {
  return Astro.redirect(`/login?redirect=/verify/${sessionId}`);
}

// Meta tagi
const title = 'Weryfikacja propozycji fiszek - 10xCards';
const description = 'Przejrzyj i zweryfikuj wygenerowane propozycje fiszek';
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <script is:inline>
      // Inicjalizacja dark mode przed renderowaniem (zapobiega FOUC)
      (function() {
        const darkModeStorage = localStorage.getItem('darkMode');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const shouldUseDark = darkModeStorage !== null ? darkModeStorage === 'true' : prefersDark;
        
        if (shouldUseDark) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
  </head>
  <body>
    <Topbar client:load />
    <main class="container mx-auto px-4 py-8 max-w-6xl">
      <VerificationView sessionId={sessionId} client:load />
    </main>
    <Toaster client:load />
  </body>
</html>

<style is:global>
  @import '../../styles/global.css';
</style>


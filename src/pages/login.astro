---
export const prerender = false;

import { LoginPage } from '../components/auth/LoginPage';
import { Toaster } from '@/components/ui/sonner';

// Sprawdzenie czy użytkownik jest już zalogowany
// Używamy getUser() zamiast getSession() - może działać lepiej w SSR
const { data: { user } } = await Astro.locals.supabase.auth.getUser();

// Jeśli użytkownik jest już zalogowany, przekieruj na dashboard lub redirect URL
if (user) {
  const redirectUrl = Astro.url.searchParams.get('redirect') || '/';
  return Astro.redirect(redirectUrl);
}

// Wyciągnij query parameter redirect
const redirectUrl = Astro.url.searchParams.get('redirect') || undefined;

// Meta tagi
const title = 'Logowanie - Fiszki-MyAPP';
const description = 'Zaloguj się do swojego konta Fiszki-MyAPP';
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <script is:inline>
      // Inicjalizacja dark mode przed renderowaniem (zapobiega FOUC)
      (function() {
        const darkModeStorage = localStorage.getItem('darkMode');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const shouldUseDark = darkModeStorage !== null ? darkModeStorage === 'true' : prefersDark;

        if (shouldUseDark) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
  </head>
  <body class="bg-background">
    <LoginPage redirectUrl={redirectUrl} client:load />
    <Toaster client:load />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

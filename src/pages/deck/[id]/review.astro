---
export const prerender = false;

import TrainingSession from '../../../components/training/TrainingSession';
import { Toaster } from '@/components/ui/sonner';
import Topbar from '../../../components/layout/Topbar';

// Pobranie parametru id z URL
const { id } = Astro.params;

// Walidacja parametru id (musi być liczbą)
if (!id || isNaN(Number(id))) {
  return Astro.redirect('/');
}

const deckId = Number(id);

// Sprawdzenie autoryzacji przed renderowaniem
const { data: { session } } = await Astro.locals.supabase.auth.getSession();

// Jeśli użytkownik nie jest zalogowany, przekieruj na stronę logowania
if (!session) {
  return Astro.redirect(`/login?redirect=/deck/${deckId}/review`);
}

// Meta tagi
const title = 'Tryb treningu - Fiszki-MyAPP';
const description = 'Sesja powtórkowa z wykorzystaniem algorytmu spaced repetition';
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <script is:inline>
      // Inicjalizacja dark mode przed renderowaniem (zapobiega FOUC)
      (function() {
        const darkModeStorage = localStorage.getItem('darkMode');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const shouldUseDark = darkModeStorage !== null ? darkModeStorage === 'true' : prefersDark;
        
        if (shouldUseDark) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
  </head>
  <body>
    <Topbar client:load />
    <TrainingSession deckId={deckId} client:load />
    <Toaster client:load />
  </body>
</html>

<style is:global>
  @import '../../../styles/global.css';
</style>

